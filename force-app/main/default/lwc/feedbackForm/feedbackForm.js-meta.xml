<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Feedback Form</masterLabel>
    <targets>
        <target>lightningStatic__Email</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningStatic__Email">
            <property name="formUrl" type="String" label="Form URL" description="URL where form data will be sent" required="true" default="https://todo"/>
            <property name="recipientEmail" type="String" label="Recipient Email" required="true" default="{{Recipient.Email}}"/>
            <property name="ratingFieldLabel" type="String" label="Rating Field Label" required="true" default="Rating"/>
            <property name="ratingFieldName" type="String" label="Rating Field Name" required="true" default="rating"/>
            <property name="submitButtonLabel" type="String" label="Submit Button Label" required="true" default="Submit"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
