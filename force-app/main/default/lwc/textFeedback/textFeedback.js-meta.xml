<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Text Feedback</masterLabel>
    <targets>
        <target>lightningStatic__Email</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningStatic__Email">
            <property
        name="formUrl"
        type="String"
        label="Form URL"
        description="Custom Form Handler URL where form data will be sent."
        required="true"
        default="https://todo"
      />
            <property
        name="recipientEmail"
        type="String"
        label="Recipient Email"
        description="Email used to match with a prospect record."
        required="true"
        default="{{Recipient.Email}}"
      />
            <property
        name="questionLabel"
        type="String"
        label="Question Label"
        default="Give us some feedback"
      />
            <property
        name="formFieldName"
        type="String"
        label="Form Field Name"
        description="Name of the field in which the feedback value will be sent."
        required="true"
        default="feedback"
      />
            <!-- Answer 1 -->
            <property
        name="answer1Label"
        type="String"
        label="Answer 1 Label"
        required="true"
        default="No"
      />
            <property
        name="answer1Value"
        type="String"
        label="Answer 1 Value"
        required="true"
        default="no"
      />
            <!-- Answer 2 -->
            <property
        name="answer2Label"
        type="String"
        label="Answer 2 Label"
        default="Maybe"
      />
            <property
        name="answer2Value"
        type="String"
        label="Answer 2 Value"
        default="maybe"
      />
            <!-- Answer 3 -->
            <property
        name="answer3Label"
        type="String"
        label="Answer 3 Label"
        default="Yes"
      />
            <property
        name="answer3Value"
        type="String"
        label="Answer 3 Value"
        default="yes"
      />
            <!-- Answer 4 -->
            <property
        name="answer4Label"
        type="String"
        label="Answer 4 Label"
      />
            <property
        name="answer4Value"
        type="String"
        label="Answer 4 Value"
      />
      <!-- Answer 5 -->
      <property
        name="answer5Label"
        type="String"
        label="Answer 5 Label"
        required="false"
      />
      <property name="answer5Value" type="String" label="Answer 5 Value" />
      <!-- Label Style -->
      <property
        name="labelAlignment"
        label="Label Alignment"
        type="String"
        datasource="left,center,right"
        required="true"
        default="left"
      />
      <property
        name="labelColor"
        type="Color"
        label="Label Color"
        required="true"
        default="#014486"
      />
      <!-- Button Base Style -->
      <property
        name="buttonColor"
        type="Color"
        label="Button Text Color"
        required="true"
        default="#54698d"
      />
      <property
        name="buttonBgColor"
        type="Color"
        label="Button Background Color"
        required="true"
        default="#FFFFFF"
      />
      <property
        name="buttonBorderColor"
        type="Color"
        label="Button Border Color"
        required="true"
        default="#0176d3"
      />
      <!-- Button Hover Style -->
      <property
        name="buttonHoverColor"
        type="Color"
        label="Button Hover Text Color"
        description="Previewed unavailable in Email Builder (hover disabled), use the email template preview."
        required="true"
        default="#FFFFFF"
      />
      <property
        name="buttonHoverBgColor"
        type="Color"
        label="Button Hover Background Color"
        description="Previewed unavailable in Email Builder (hover disabled), use the email template preview."
        required="true"
        default="#0176d3"
      />
      <property
        name="buttonHoverBorderColor"
        type="Color"
        label="Button Hover Border Color"
        description="Previewed unavailable in Email Builder (hover disabled), use the email template preview."
        required="true"
        default="#014486"
      />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
