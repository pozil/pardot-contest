<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Text Feedback Form</masterLabel>
    <targets>
        <target>lightningStatic__Email</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningStatic__Email">
            <property name="formUrl" type="String" label="Form URL" description="Custom Form Handler URL where form data will be sent." required="true" default="https://todo"/>
            <property name="recipientEmail" type="String" label="Recipient Email" description="Email used to match with a prospect record." required="true" default="{{Recipient.Email}}"/>
            <property name="questionLabel" type="String" label="Question Label" default="Give us some feedback"/>
            <property name="prospectFieldName" type="String" label="Prospect Field Name" description="Prospect field in which the answer will be saved." required="true" default="Feedback"/>
            <!-- Answer 1 --><property name="answer1Label" type="String" label="Answer 1 label" required="true" default="No"/>
            <property name="answer1Value" type="String" label="Answer 1 value" required="true" default="no"/>
            <!-- Answer 2 --><property name="answer2Label" type="String" label="Answer 2 label" default="Maybe"/>
            <property name="answer2Value" type="String" label="Answer 2 value" default="maybe"/>
            <!-- Answer 3 --><property name="answer3Label" type="String" label="Answer 3 label" default="Yes"/>
            <property name="answer3Value" type="String" label="Answer 3 value" default="yes"/>
            <!-- Answer 4 --><property name="answer4Label" type="String" label="Answer 4 label"/>
            <property name="answer4Value" type="String" label="Answer 4 value"/>
            <!-- Answer 5 --><property name="answer5Label" type="String" label="Answer 5 label" required="false"/>
            <property name="answer5Value" type="String" label="Answer 5 value"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
